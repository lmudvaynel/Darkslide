<%= semantic_form_for [:admin, resource] do |f| %>
  <%= f.inputs "Основное" do %>
    <%= f.input :slug, label: 'Псевдоним' %>
    <%= f.input :position %>
    <%= f.input :template_id, label: 'Шаблон', as: :select,
                collection: Hash[::Template.all.map{|temp| ["#{temp.temp_name}", temp.id]}] %>
    <%= f.input :hidden, label: 'Скрыть пункт меню' %>
    <%= f.input :name, input_html: {rows:1}, label: 'Заголовок страницы' %>
    <%= f.input :content, as: :ckeditor, label: 'Контент' %>
  <% end %>

  <div class="globalize-inputs globalize-content">
    <%= f.inputs "SEO" do %>
      <%= f.semantic_fields_for :seo do |j| %>
        <%= j.input :title, input_html: {rows:1}, label: 'Заголовок' %>
        <%= j.input :keywords, label: 'Ключевые слова' %>
        <%= j.input :description, label: 'Описание' %>
      <% end %>
    <% end %>
  </div>


  <%= f.actions %>
<% end %>
